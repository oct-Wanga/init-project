{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "gtag.js"
    ],
    "paths": {
      "@*": [
        "./src/*",
        "./src/app/*",
        "./src/app/(main)/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@messages/*": [
        "./src/messages/*"
      ],
      "@type/*": [
        "./src/type/*"
      ],
      "@api/*": [
        "./src/app/_api/*"
      ],
      "@component/*": [
        "./src/app/_components/*"
      ],
      "@hooks/*": [
        "./src/app/_hook/*"
      ],
      "@public/*": [
        "./public/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
